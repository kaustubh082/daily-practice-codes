#include <iostream>
#include <string>
using namespace std;

// Structure for storing contact details
struct Contact {
    string name;
    string phone;
};

// Function to perform linear search
int linearSearch(Contact contacts[], int size, string searchName) {
    for (int i = 0; i < size; i++) {
        if (contacts[i].name == searchName) {
            cout << "\nContact Found!" << endl;
            cout << "Name: " << contacts[i].name << endl;
            cout << "Phone: " << contacts[i].phone << endl;
            return i; // return index where found
        }
    }
    cout << "\nContact NOT found in phone book." << endl;
    return -1;
}

int main() {
    int size;
    cout << "Enter the number of contacts: ";
    cin >> size;
    cin.ignore(); // clear newline left in input buffer

    Contact contacts[size];

    // Input contacts
    for (int i = 0; i < size; i++) {
        cout << "\nEnter details for contact " << i + 1 << endl;
        cout << "Name: ";
        getline(cin, contacts[i].name);
        cout << "Phone: ";
        getline(cin, contacts[i].phone);
    }

    // Search
    string searchName;
    cout << "\nEnter the name to search: ";
    getline(cin, searchName);

    linearSearch(contacts, size, searchName);

    return 0;
}
