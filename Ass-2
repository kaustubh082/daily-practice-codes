#include <iostream>
using namespace std;

// Bubble Sort function
void bubbleSort(int arr[], int size) {
    for (int i = 0; i < size - 1; i++) {
        for (int j = 0; j < size - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                // Swap
                int temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }
}

int main() {
    int arr[100], size;

    cout << "Enter number of temperature readings: ";
    cin >> size;

    if (size <= 0 || size > 100) {
        cout << "Invalid size! (1â€“100 allowed)" << endl;
        return 1;
    }

    cout << "Enter " << size << " temperature readings:" << endl;
    for (int i = 0; i < size; i++) {
        cin >> arr[i];
    }

    // Sort temperatures
    bubbleSort(arr, size);

    // Display sorted temperatures
    cout << "\nSorted Temperatures: ";
    for (int i = 0; i < size; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
    return 0;
}
