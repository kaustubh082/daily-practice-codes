#include <iostream>
using namespace std;

int minDistance(int dist[], bool visited[], int V) {
    int min = 999999, min_index = -1;
    for (int v = 0; v < V; v++) {
        if (!visited[v] && dist[v] <= min) {
            min = dist[v];
            min_index = v;
        }
    }
    return min_index;
}

void dijkstra(int graph[100][100], int V, int src) {
    int dist[100];
    bool visited[100];

    for (int i = 0; i < V; i++) {
        dist[i] = 999999;
        visited[i] = false;
    }

    dist[src] = 0;

    for (int count = 0; count < V - 1; count++) {
        int u = minDistance(dist, visited, V);
        visited[u] = true;

        for (int v = 0; v < V; v++) {
            if (!visited[v] && graph[u][v] && dist[u] + graph[u][v] < dist[v]) {
                dist[v] = dist[u] + graph[u][v];
            }
        }
    }

    cout << "\nMinimum Cost from House " << src << " to others:\n";
    for (int i = 0; i < V; i++) {
        cout << "House " << src << " -> House " << i << " : " << dist[i] << endl;
    }
}

int main() {
    int V;
    cout << "Enter number of houses (nodes): ";
    cin >> V;

    int graph[100][100];
    cout << "Enter the cost matrix (0 if no direct pipe):\n";
    for (int i = 0; i < V; i++) {
        for (int j = 0; j < V; j++) {
            cin >> graph[i][j];
        }
    }

    int src;
    cout << "Enter the starting house: ";
    cin >> src;

    dijkstra(graph, V, src);
    return 0;
}
